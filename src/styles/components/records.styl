@import 'nib';
@import '../vars.styl';

.records-container
  display inline-block
  button
    background-color lighten($alt-color, 10)
    border-radius 2px
    box-shadow 0px 0px 4px 0px rgba(50, 50, 50, 0.4)
    border none
    color white
    margin 4px
    padding 6px
    &:active
      background-color darken($alt-color, 5)
      box-shadow inset 0px 0px 4px 0px rgba(50, 50, 50, 0.8)
    &:hover
      background-color $alt-color
      color white
      cursor pointer
    &:focus
      outline none

.records
  .record-button
    background-color lighten($main-color, 30)
    border-radius 2px
    box-shadow 0px 0px 2px 0px rgba(50, 50, 50, 0.4)
    display inline-block
    margin 4px
    padding 6px
    user-select none
    &:active
      box-shadow inset 0px 0px 4px 0px rgba(50, 50, 50, 0.8)
    &:hover
      background-color lighten($main-color, 15)
      color white
      cursor pointer
    select, input
      width 100%
  .record-button-selected
    background-color $main-color
    color white
    &:hover
      background-color lighten($main-color, 15)
      color black
  .filter-not
    background-color $filter-not
    border 2px solid $filter-not
    &:hover
      background-color $filter-not
  .filter-greater
    background-color $filter-greater
    border 2px solid $filter-greater
    &:hover
      background-color $filter-greater
  .filter-less
    background-color $filter-less
    border 2px solid $filter-less
    &:hover
      background-color $filter-less
  .filter-like
    background-color $filter-like
    border 2px solid $filter-like
    &:hover
      background-color $filter-like
  .filter-link
    background-color $filter-link
    border 2px solid $filter-link
    &:hover
      background-color $filter-link
  .filter-in
    background-color $filter-in
    border 2px solid $filter-in
    &:hover
      background-color $filter-in


.records-tabs
  align-items center
  display inline-flex
  height 45px
  margin-top 6px
  user-select none
  width 100%
  &:hover
    cursor pointer
  :first-child
    border-right 1px solid $tab-border-color

.focused-record-tab, .unfocused-record-tab
  align-items center
  display flex
  font-size 1.2em
  font-weight 600
  justify-content center
  height 35px
  width 50%

.focused-record-tab
  border-top 1px solid $tab-border-color
  box-shadow 0px -1px 1px 0px rgba(50, 50, 50, 0.2);
  color black

.unfocused-record-tab
  background linear-gradient(hsla(190, 100%, 13%, 0), hsla(190, 100%, 13%, 0.1))
  border-bottom 1px solid $tab-border-color
  box-shadow inset 0px -1px 1px 0px rgba(50, 50, 50, 0.2);
  color hsla(0, 0%, 0%, 0.7)
  &:hover
    background hsla(360, 100%, 100%, 0)
