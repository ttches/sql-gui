@import 'nib';
@import '../vars.styl';

.console-selected
  background-color $console-background
  box-shadow 0px 1px 2px 0px rgba(50, 50, 50, .5);
  font-family $mono
  font-size 1.2em
  height 100px
  margin-right 5px
  margin-top 4px
  overflow-y auto
  user-select none
  width: calc(50% - 5px)
  .target
    border solid 2px $main-color
    margin 3px
    padding 2px
    user-select none
    &:hover
      border 2px solid $alt-color
      background-color $alt-color
      color white
      cursor pointer
